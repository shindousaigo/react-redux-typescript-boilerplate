{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    // "strict": true,
    "outDir": "build",
    "noImplicitAny": false,
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "./",
    "paths": {
      "app/*": ["./src/app/*"],
      "@/*": ["./node_modules/*"]
    }
  },
  "exclude": ["dist", "build", "node_modules", "git_component"]
}
